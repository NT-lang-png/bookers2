<div>
  <%= flash[:notice] %>
</div>

<!--その本のユーザーインフォメーション-->
<div class="container">
  <div class ="row">
    <div class ="col-md-3">
      <h2>User info</h2>
      <%= image_tag @book.user.get_image(100,100) %>
      <table class ="table">
        <tr>
          <th>name</th>
          <th><%= @book.user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @book.user.introduction %></th>
        </tr>
      </table>
      <div class ="row">
        <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary" do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <div>
        <h2 class ="mt-3">New book</h2>
        <%= form_with model: @book, url: books_path, method: :post do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          
          <input type ="submit" name="commit" class ="btn btn-success" data-disable-with ="Create Book" value ="Create Book">
        <% end %>
      </div>
    </div>
    
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <div class ="d-flex flex-column mb-3">
              <div>
                <%= link_to user_show_path(@book.user.id) do %>
                <%= image_tag @book.user.get_image(100,100) %>
                <% end %>
              </div>
              <div>
                <%= link_to user_show_path(@book.user.id) do %>
                <%= @book.user.name %>
                <% end %>
              </div>
            </div>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to edit_book_path(@book.id), class: "btn btn-sm btn-success" do %>
              Edit
              <% end %>
            <% else link_to book_path(@book.id) %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to book_path(@book.id) ,method: :delete ,"data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" do %>
              Destroy
              <% end %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>


