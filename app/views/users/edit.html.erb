<div class ="container">
  <div class ="row">
    <div class ="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div>
        <% if @user.errors.any? %>
        <%= @user.errors.count %> error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
      </div>
      <div>
        <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName" %>
        </div>
        <div class="form-group">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, accept:"image/*" %>
        </div>
        <div class="form-group">
          <%= f.text_area :introduction %>
          <%= f.submit "Update User" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



